@model IEnumerable<Rental.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2>Confirmed / Active Bookings</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No confirmed bookings.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Car</th>
                    <th>Renter</th>
                    <th>Period</th>
                    <th>Total</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Id</td>
                        <td>@b.Car.Brand @b.Car.Model<br /><small class="text-muted">@b.Car.Location</small></td>
                        <td>@b.Renter.FullName<br /><small>@b.Renter.Email</small></td>
                        <td>@b.StartDate.ToShortDateString() - @b.EndDate.ToShortDateString()</td>
                        <td>@b.TotalPrice.ToString("C")</td>
                        <td>@b.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}