@{
    ViewData["Title"] = "Home Page";
}

<!-- FULLSCREEN HERO (breaks out of Bootstrap container) -->
<section style="
    height: 100vh;
    width: 100vw;
    position: relative;
    overflow: hidden;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);">

    <!-- Background GIF -->
    <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/images/hero.gif') center center/cover no-repeat;
        filter: brightness(45%);   /* darker gif */
        z-index: 1;">
    </div>

    <!-- Content on top -->
    <div style="
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        z-index: 2;">

        <h1 class="display-3 fw-bold mb-3"
            style="text-shadow: 1px 3px 15px rgba(0,0,0,0.7);">
            Drive Your Next <span style="color:#FFB800;">Adventure</span>
        </h1>

        <p class="lead mb-4 "
           style="text-shadow: 1px 2px 12px rgba(0,0,0,0.6);">
            Book premium cars at affordable prices. Fast, reliable &amp; secure.
        </p>

        <a asp-controller="Account" asp-action="Register"
           class="btn btn-primary btn-lg px-4 me-2">
            Get Started
        </a>

        <a href="#features"
           class="btn btn-outline-light btn-lg px-4">
            Learn More
        </a>
    </div>
</section>
