@model IEnumerable<Rental.Models.Car>


@{
    ViewData["Title"] = "Home Page";
}

<!-- =================== FULLSCREEN HERO =================== -->
<section style="
    height: 100vh;
    width: 100vw;
    position: relative;
    overflow: hidden;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);">

    <!-- Background GIF -->
    <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/images/hero.gif') center no-repeat;
        background-size: cover;
        filter: brightness(45%);
        z-index: 1;">
    </div>

    <!-- Hero Text -->
    <div style="
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        z-index: 2;">

        <!-- Title -->
        <h1 class="display-3 fw-bold mb-3"
            style="text-shadow: 1px 3px 15px rgba(0,0,0,0.7);">
            Drive Your Next <span style="color:#FFB800;">Adventure</span>
        </h1>

        <!-- Subtitle -->
        <p class="lead mb-4"
           style="text-shadow: 1px 2px 12px rgba(0,0,0,0.6);">
            Book premium cars at affordable prices. Fast, reliable &amp; secure.
        </p>

        <!-- CTA -->
        <a asp-controller="Account" asp-action="Register"
           class="get-started-btn d-inline-block">
            GET STARTED
        </a>

    </div>
</section>



<!-- ====================== ABOUT =========================== -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center gy-4">

            <!-- About Text -->
            <div class="col-lg-6">

                <small class="text-muted" style="letter-spacing:6px;">
                    VROOMLY
                </small>

                <h2 class="fw-bold display-6 mt-2 mb-3 about-title">
                    We Are More Than <br />
                    <span class="about-highlight">A Car Rental Company</span>
                </h2>

                <p class="text-muted about-desc mb-4">
                    We are committed to making every journey smooth, comfortable, and stress-free.
                    With a diverse fleet of well-maintained vehicles and a team dedicated to exceptional service,
                    we ensure that you always have the right car at the right time.
                </p>

                <!-- Feature List -->
                <ul class="list-unstyled about-features mb-0">

                    <!-- Feature 1 -->
                    <li class="d-flex align-items-center mb-3">
                        <span class="feature-dot me-3">
                            <svg width="12" height="12" viewBox="0 0 24 24">
                                <path d="M20 6L9 17l-5-5"
                                      stroke="#222" stroke-width="2"
                                      stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <span class="feature-text">Sports and Luxury Cars</span>
                    </li>

                    <!-- Feature 2 -->
                    <li class="d-flex align-items-center">
                        <span class="feature-dot me-3">
                            <svg width="12" height="12" viewBox="0 0 24 24">
                                <path d="M20 6L9 17l-5-5"
                                      stroke="#222" stroke-width="2"
                                      stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <span class="feature-text">Economy & Family Cars</span>
                    </li>

                </ul>
            </div>

            <!-- About Image -->
            <div class="col-lg-6 d-flex justify-content-end">
                <div class="about-image-wrap">
                    <img src="~/images/about.jpg"
                         alt="About - Vroomly Rentals"
                         class="about-image" />
                </div>
            </div>


        </div>
    </div>
</section>


<!-- =================== Available cars =================== -->
<section id="Cars" class="car-carousel-section my-5" style="padding-top: 140px;">


    <div class="text-center mb-5">
        <h6 class="text-uppercase"
            style="letter-spacing: 4px; font-size: 10px; color: #f5a623;">
            Select Your Car
        </h6>
        <h2 class="text-center fw-bold mb-5" style="font-size:38px;">
            Available <span style="color:#f5a623;">Cars</span>
        </h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">No cars available right now.</div>
    }
    else
    {
        <div class="swiper carSwiper">
            <div class="swiper-wrapper">
                @foreach (var car in Model)
                {
                    if (car.Status != Rental.Models.CarStatus.Approved)
                        continue;

                    <div class="swiper-slide">
                        <div class="car-card">

                            <div class="car-card-image">
                                <img src="@car.ImagePath" alt="@car.Brand @car.Model" />
                            </div>

                            <div class="car-card-info d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-1">@car.Brand @car.Model</h4>
                                    <p class="small text-muted mb-0">
                                        <i class="fa fa-car"></i> @car.CarType &nbsp;
                                        <i class="fa fa-gas-pump"></i> @car.FuelType &nbsp;
                                        <i class="fa-solid fa-user"></i> @car.Seats Seats
                                    </p>
                                </div>

                                <div class="text-end">
                                    <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id"
                                       class="details-btn">Details</a>

                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Account" asp-action="Login" class="rent-btn">Rent</a>
                                    }
                                    else if (User.IsInRole("Renter"))
                                    {
                                        <a asp-controller="Renter" asp-action="Dashboard" class="rent-btn">Rent</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="AccessDenied" class="rent-btn">Rent</a>
                                    }

                                    <div class="price-tag">
                                        @car.PricePerDay.ToString("C")
                                        <span class="price-day">/day</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>

            <div class="swiper-button-prev custom-arrow">
                <i class="fa-solid fa-chevron-left"></i>
            </div>
            <div class="swiper-button-next custom-arrow">
                <i class="fa-solid fa-chevron-right"></i>
            </div>

        </div>
    }

</section>





<!-- ====================== MINI HERO ======================= -->
<div class="hero-bg">
    <div class="hero-content">
        <p>RENT NOW</p>
        <h1>Join Our Family</h1>
    </div>
</div>





<!-- ====================== SERVICES ======================== -->
<section id="services" class="services-section py-5">

    <!-- Section Header -->
    <div class="text-center mb-5">
        <h6 class="text-uppercase"
            style="letter-spacing: 4px; font-size: 10px; color: #f5a623;">
            WHAT WE DO
        </h6>

        <h2 class="fw-bold">
            Our <span style="color: #f5a623;">Services</span>
        </h2>
    </div>

    <!-- Cards -->
    <div class="container">
        <div class="row g-4 justify-content-center">

            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-img">
                        <img src="~/images/host.jpg" alt="host">
                    </div>
                    <div class="service-content">
                        <div class="service-number">01</div>
                        <h5>Host Your Car</h5>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-img">
                        <img src="~/images/rent.jpg" alt="rent">
                    </div>
                    <div class="service-content">
                        <div class="service-number">02</div>
                        <h5>Rent A Car</h5>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="service-card">
                    <div class="service-img">
                        <img src="~/images/maintenance.jpg" alt="maintenance">
                    </div>
                    <div class="service-content">
                        <div class="service-number">03</div>
                        <h5>Car Maintenance & Inspection</h5>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



<!-- ====================== Feedback Form ======================== -->

<section id="contact" style="padding: 80px 0;">

    <h2 class="text-center pt-10 fw-bold"
        style="font-family: 'Playfair Display', serif; font-size: 42px; color:#222;">
        Customer <span style="color:#f5a623;">Satisfaction</span>
    </h2>

    <div class="container" style="max-width: 1100px; margin-top: 40px;">

        <div class="row shadow-lg"
             style="border-radius: 22px; overflow: hidden; background: #fff;">

            <!-- Left Side -->
            <div class="col-lg-6 p-5"
                 style="background: #fff7e6; border-right: 1px solid #f2d6a8;">
                <h3 class="fw-bold mb-3"
                    style="color:#d48c20; font-family:'Playfair Display', serif;">
                    We Value Your Feedback
                </h3>

                <p class="text-muted mb-4">
                    Help us improve your Vroomly experience.
                    Share your thoughts and suggestions — we’re listening.
                </p>

                <ul class="text-muted" style="line-height: 1.9;">
                    <li>Fast and helpful support</li>
                    <li>Open to your ideas</li>
                    <li>Focused on your experience</li>
                </ul>

                <p class="text-secondary mt-3">
                    Fill in the form and we’ll get back to you shortly.
                </p>
            </div>

            <!-- Right Side Form -->
            <div class="col-lg-6 p-5">

                <form class="row g-3" name="submit-to-google-sheet">

                    <div class="col-12">
                        <input type="text" name="Name" placeholder="Your Name" required
                               class="form-control feedback-input" />
                    </div>

                    <div class="col-12">
                        <input type="email" name="Email" placeholder="Your Email" required
                               class="form-control feedback-input" />
                    </div>

                    <div class="col-12">
                        <textarea name="Message" rows="5" placeholder="Your Message"
                                  class="form-control feedback-input"></textarea>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="feedback-btn w-100">
                            Submit Feedback
                        </button>
                    </div>

                </form>

                <span id="msg" class="text-success mt-3 d-block"></span>

            </div>
        </div>

    </div>
</section>

