@using System
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";

    // DASHBOARD PAGES → Always show solid navbar
    bool isDashboard =
        (controller == "Home" && action == "AdminDashboard") ||
        (controller == "Home" && action == "HostDashboard") ||
        (controller == "Home" && action == "RenterDashboard");

    // HOME PAGE → Transparent navbar + scroll animation
    bool isHomeLanding = controller == "Home" && action == "Index";

    // Show navbar everywhere except login/register
    bool showNavbar = !(controller == "Account" &&
                       (action == "Login" || action == "Register"));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental</title>

    <!-- CSS libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Rental.styles.css" asp-append-version="true" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
          crossorigin="anonymous" />

    <style>
        :root {
            --navbar-height: 72px;
        }

        .with-navbar {
            padding-top: var(--navbar-height);
        }

        /* Solid navbar for dashboards + all non-home pages */
        .navbar-solid {
            background: linear-gradient(90deg, #000000, #181818, #FFB800) !important;
            box-shadow: 0 4px 18px rgba(0,0,0,0.4);
        }
    </style>
</head>

<body>

    <!-- ==================== NAVBAR ==================== -->
    <header>
        @if (showNavbar)
        {
            <nav id="mainNavbar"
                 class="custom-navbar @(isHomeLanding ? "" : "navbar-solid")">

                <!-- Logo -->
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index" class="brand-text">
                        <span class="brand-main">Vroomly</span>
                        <span class="brand-highlight">Rentals</span>
                    </a>
                </div>

                <!-- Links -->
                <ul class="nav-links">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a href="/#about">About</a></li>
                    <li><a asp-controller="Home" asp-action="Services">Services</a></li>
                    <li><a asp-controller="Cars" asp-action="Index">Cars</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>

                <!-- Authentication Links -->
                <ul class="auth-links">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="btn btn-link p-0">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Account" asp-action="Register" class="primary">Register</a></li>
                    }
                </ul>

            </nav>
        }
    </header>

    <!-- ==================== PAGE CONTENT ==================== -->
    @if (isHomeLanding)
    {
        <!-- Home page uses full width -->
        <main>
            @RenderBody()
        </main>
    }
    else
    {
        <!-- Dashboards & all other pages use container -->
        <div class="container with-navbar">
            <main class="pb-3">
                @RenderBody()
            </main>
        </div>
    }


    <!-- ==================== FOOTER ==================== -->
    <footer class="site-footer">

        <section class="social-strip d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <div class="me-5 d-none d-lg-block">
                <span>Get connected with us on social networks:</span>
            </div>
            <div>
                <a href="#" class="me-4 text-reset"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="me-4 text-reset"><i class="fab fa-twitter"></i></a>
                <a href="#" class="me-4 text-reset"><i class="fab fa-google"></i></a>
                <a href="#" class="me-4 text-reset"><i class="fab fa-instagram"></i></a>
                <a href="#" class="me-4 text-reset"><i class="fab fa-linkedin"></i></a>
                <a href="#" class="me-4 text-reset"><i class="fab fa-github"></i></a>
            </div>
        </section>

        <section class="footer-top">
            <div class="container text-center text-md-start mt-5">
                <div class="row mt-3">

                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>VROOMLY RENTALS
                        </h6>
                        <p>Have questions? We’d love to hear from you.</p>
                    </div>

                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">Categories</h6>
                        <p><a href="#!" class="text-reset">Luxury</a></p>
                        <p><a href="#!" class="text-reset">SUV</a></p>
                        <p><a href="#!" class="text-reset">Sedan</a></p>
                    </div>

                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">Useful links</h6>
                        <p><a href="#!" class="text-reset">About Us</a></p>
                        <p><a href="#!" class="text-reset">Orders</a></p>
                        <p><a href="#!" class="text-reset">Help</a></p>
                    </div>

                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p><i class="fas fa-home me-3"></i> Chittagong, CTG 10012, BD</p>
                        <p><i class="fas fa-envelope me-3"></i> info@example.com</p>
                    </div>

                </div>
            </div>
        </section>

        <div class="footer-bottom">
            <div class="container text-center">
                <span>&copy; 2025 Vroomly Rentals •</span>
                <a asp-controller="Home" asp-action="Privacy" class="footer-privacy">Privacy Policy</a>
            </div>
        </div>

    </footer>


    <!-- ==================== SCRIPTS ==================== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const nav = document.getElementById('mainNavbar');
        const isHome = "@isHomeLanding" === "True";

        // Only home page should animate the navbar
        if (isHome) {
            window.addEventListener("scroll", () => {
                if (window.scrollY > 30) nav.classList.add("scrolled");
                else nav.classList.remove("scrolled");
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
