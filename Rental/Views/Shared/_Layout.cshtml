
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental</title>

    <!-- CSS libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Rental.styles.css" asp-append-version="true" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
          rel="stylesheet" />

    <!-- Font Awesome icons -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

</head>

<body>
    <header>
        <!-- Navigation bar -->
        <nav class="custom-navbar" id="mainNavbar">

            <!-- Logo -->
            <div class="logo">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-text">
                    <span class="brand-main">Vroomly</span>
                    <span class="brand-highlight">Rentals</span>
                </a>
            </div>

            <!-- Center menu links -->
            <ul class="nav-links">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a href="/#about">About</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Services">Services</a></li>
                <li><a asp-area="" asp-controller="Cars" asp-action="Index">Cars</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
            </ul>

            <!-- Auth buttons -->
            <ul class="auth-links">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                            <!-- Logout button -->
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <!-- Login -->
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>

                    <!-- Register -->
                    <li><a asp-controller="Account" asp-action="Register" class="primary">Register</a></li>
                }
            </ul>
        </nav>
    </header>

    <div class="container">
        <!-- main content -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Rental -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Navbar scroll shadow/gradient -->
    <script>
        window.addEventListener('scroll', function () {
            var nav = document.getElementById('mainNavbar');
            if (!nav) return;
            if (window.scrollY > 30) {
                nav.classList.add('scrolled'); /* apply scrolled style */
            } else {
                nav.classList.remove('scrolled'); /* remove style */
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
