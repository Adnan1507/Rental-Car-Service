@model Rental.ViewModels.LoginViewModel
@{
    Layout = null;
   // ViewData["Title"] = "Login";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        
    }

    section.vh-100 {
        overflow: hidden;
    }

    .left-panel {

        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* logo at top */
        padding-top: 20px;
    }

    .login-wrapper {
        flex: 1; /* fill remaining height */
        display: flex;
        justify-content: center;
        align-items: center;
        transform: translateY(-30px); /* moves form slightly up */
    }

    .form-control-lg {
        font-size: 1rem;
    }
</style>

<!-- MDBootstrap CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.js"></script>

<section style="
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:#303030;
">

    <div class="card shadow-lg"
         style="
            border-radius: 30px;
            overflow: hidden;
            width: 98%;
            max-width: 2000px;
            height: 85vh;
            background: #D9D9D9;
         ">

        <div class="row g-0" style="height:100%;">

            <!-- LEFT SIDE -->
            <div class="col-6 text-black d-flex flex-column justify-content-center" style="padding:60px;">

                <div class="d-flex align-items-center mb-4"
                     style="margin-top:-100px; margin-left:-20px;">

                    <i class="fas fa-car-side fa-2x me-3" style="color:#FFB800;"></i>
                    <span style="font-size:60px; font-weight:800; font-family:'Poppins';">
                        Vroomly <span style="color:#FFB800;">Rentals</span>
                    </span>
                </div>

                <form asp-action="Login" method="post" style="max-width:28rem; margin-top:50px;">

                    <input type="hidden" name="returnUrl" value="@(ViewData["ReturnUrl"] ?? "")" />

                    <h1 style="font-size:36px; font-weight:800; color:#00AEEF; margin-bottom:25px;">Log in</h1>

                    <div class="mb-3">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                    </div>

                    <div class="mb-3">
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <button type="submit" class="btn btn-info btn-lg w-100">LOGIN</button>

                    <p class="small mt-3"><a asp-action="ForgotPassword">Forgot password?</a></p>
                    <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a></p>

                </form>
            </div>

            <!-- RIGHT SIDE -->
            <div class="col-6 px-0 d-flex align-items-stretch">
                <img src="/images/login-bg.jpg"
                     style="width:100%; height:100%; object-fit:cover; object-position:center; display:block;">
            </div>

        </div>

    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
