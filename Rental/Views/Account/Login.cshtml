@model Rental.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden; /* remove scroll bar */
    }

    section.vh-100 {
        height: 100vh;
        overflow: hidden;
    }

    .left-panel {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* logo at top */
        padding-top: 20px;
    }

    .login-wrapper {
        flex: 1; /* fill remaining height */
        display: flex;
        justify-content: center;
        align-items: center;
        transform: translateY(-30px); /* moves form slightly up */
    }

    .form-control-lg {
        font-size: 1rem;
    }
</style>

<!-- MDBootstrap CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.js"></script>

<section class="vh-100">
    <div class="container-fluid h-100">
        <div class="row h-100">

            <!-- LEFT SIDE -->
            <div class="col-sm-6 text-black left-panel">

                <!-- LOGO TOP‑LEFT -->
                <div class="px-3 d-flex align-items-center mb-2">
                    <i class="fas fa-car-side fa-2x me-3" style="color:#FFB800;"></i>
                    <span style="
                        font-size: 40px;
                        font-weight: 800;
                        letter-spacing: 1px;
                        font-family: 'Poppins', sans-serif;
                        color: #111;">
                        Vroomly <span style="color:#FFB800;">Rentals</span>
                    </span>
                </div>

                <!-- LOGIN FORM -->
                <div class="login-wrapper px-5 ms-xl-4">
                    <form asp-action="Login" method="post" style="width: 23rem;">

                        <h1 style="
                            font-size: 34px;
                            font-weight: 800;
                            color: #00AEEF;
                            font-family: 'Poppins', sans-serif;
                            margin-bottom: 25px;">
                            Log in
                        </h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-info btn-lg btn-block w-100">Login</button>
                        </div>

                        <p class="small mb-3">
                            <a class="text-muted" asp-action="ForgotPassword">Forgot password?</a>
                        </p>

                        <p>
                            Don't have an account?
                            <a asp-controller="Account" asp-action="Register" class="link-info">Register here</a>
                        </p>
                    </form>
                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="/images/login-bg.jpg"
                     class="w-100 h-100"
                     style="object-fit: cover; object-position: center;" />
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
