@model Rental.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    /* Hide navbar on this page */
    nav {
        display: none !important;
    }

    body {
        background-color: #f0f4ff;
    }

    .card-wrapper {
        margin-top: 140px;
    }
</style>

<!-- Notification (hidden initially) -->
<div id="resetAlert"
     class="alert text-center"
     style="display:none; position:fixed; top:20px; left:50%; transform:translateX(-50%); z-index:1050; width:300px;">
    <!-- text set by JS -->
</div>

<!-- CENTER THE CARD -->
<div class="d-flex justify-content-center card-wrapper">
    <div class="card text-center" style="width: 400px; background-color: white;">

        <div class="card-header h5 text-white bg-primary">Password Reset</div>

        <div class="card-body px-5">
            <p class="card-text text-Black py-2">
                Enter your email address and we'll send you a reset link.
            </p>

            <!-- Visible email input (for user) -->
            <div class="my-3 text-start">
                <label class="form-label" for="typeEmail">Email</label>
                <input type="email" id="typeEmail" class="form-control" placeholder="Enter your email" />
            </div>

            <!-- Hidden REAL form that goes to the backend -->
            <form id="resetForm" asp-action="ForgotPassword" method="post" style="display:none;">
                @* Anti-forgery token for security *@
                @Html.AntiForgeryToken()

                @* This input name MUST match the ViewModel property "Email" *@
                <input type="email" name="Email" id="hiddenEmail" />
            </form>

            <!-- Button triggers JS, which then submits the hidden form -->
            <button type="button" id="resetBtn" class="btn btn-primary w-100">
                Reset password
            </button>

            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Account" asp-action="Login">Login</a>
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>

            <!-- Optional: show server-side validation errors if model state is invalid -->
            <div class="mt-3 text-start">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('resetBtn').addEventListener('click', function () {

            var emailInput = document.getElementById('typeEmail').value.trim();
            var hiddenEmail = document.getElementById('hiddenEmail');
            var alertBox = document.getElementById('resetAlert');

            // If email is empty → show red alert on THIS page (no submit)
            if (emailInput === "") {
                alertBox.classList.remove("alert-success");
                alertBox.classList.add("alert-danger");
                alertBox.innerText = "Please enter your email.";
                alertBox.style.display = 'block';

                setTimeout(function () {
                    alertBox.style.display = 'none';
                }, 6000);

                return; // stop here
            }

            // Put the entered email into the hidden form field
            hiddenEmail.value = emailInput;

            // ✅ Now just submit. We won't show success here.
            document.getElementById('resetForm').submit();
        });

        // ✅ This part runs AFTER the server posts back successfully
        // and sets ViewBag.ResetEmailSent = true;
        @if (ViewBag.ResetEmailSent == true)
        {
                @:window.addEventListener('load', function () {
                @:    var alertBox = document.getElementById('resetAlert');
                @:    alertBox.classList.remove("alert-danger");
                @:    alertBox.classList.add("alert-success");
                @:    alertBox.innerText = "Reset link has been sent to your email.";
                @:    alertBox.style.display = 'block';
                @:    setTimeout(function () {
                @:        alertBox.style.display = 'none';
                @:    }, 6000);
                @:});
        }
    </script>
}

