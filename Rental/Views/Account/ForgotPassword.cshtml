@model Rental.ViewModels.ForgotPasswordViewModel

<style>
    nav {
        display: none !important;
    }

    body {
        background-color: #f0f4ff;
    }

    .card-wrapper {
        margin-top: 140px;
    }
</style>

<!-- Notification (hidden initially) -->
<div id="resetAlert"
     class="alert alert-success text-center"
     style="display:none; position:fixed; top:20px; left:50%; transform:translateX(-50%); z-index:1050; width:300px;">
    Reset link has been sent to your email.
</div>

<!-- CENTER THE CARD -->
<div class="d-flex justify-content-center card-wrapper">
    <div class="card text-center" style="width: 400px; background-color: white;">

        <div class="card-header h5 text-white bg-primary">Password Reset</div>

        <div class="card-body px-5">
            <p class="card-text text-Black py-2">
                Enter your email address and we'll send you a reset link.
            </p>
             
            <div class="my-3 text-start">
                <label class="form-label" for="typeEmail">Email</label>
                <input type="email" id="typeEmail" class="form-control" />
            </div>


            <!-- Button triggers notification -->
            <button type="button" id="resetBtn" class="btn btn-primary w-100">
                Reset password
            </button>

            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Account" asp-action="Login">Login</a>
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('resetBtn').addEventListener('click', function () {

            var emailInput = document.getElementById('typeEmail').value.trim();
            var alertBox = document.getElementById('resetAlert');

            // If email is empty → do NOT show green alert, show warning instead
            if (emailInput === "") {
                alertBox.classList.remove("alert-success");
                alertBox.classList.add("alert-danger");
                alertBox.innerText = "Please enter your email.";
                alertBox.style.display = 'block';

                setTimeout(function () {
                    alertBox.style.display = 'none';
                }, 6000);

                return; // stop here (don’t show success message)
            }

            // If email has text → show success alert
            alertBox.classList.remove("alert-danger");
            alertBox.classList.add("alert-success");
            alertBox.innerText = "Reset link has been sent to your email.";
            alertBox.style.display = 'block';

            setTimeout(function () {
                alertBox.style.display = 'none';
            }, 6000);
        });
    </script>

}
